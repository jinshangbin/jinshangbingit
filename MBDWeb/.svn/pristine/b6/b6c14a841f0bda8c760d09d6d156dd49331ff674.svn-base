<div class=" public_page clearfix" >
    <div class="col-md-12" style="margin-top:20px;">
        <div class="pull-left form-inline">
            <label>显示&nbsp;
                <select value="{pageSize}" class="form-control input-sm">
                    <if test="{pageSize}==10">
                        <option value="10" selected="selected">10</option>
                    </if>
                    <if test="'{pageSize}'!='10'">
                        <option value="10">10</option>
                    </if>
                    <if test="'{pageSize}'=='25'">
                        <option value="25" selected="selected">25</option>
                    </if>
                    <if test="'{pageSize}'!='25'">
                        <option value="25">25</option>
                    </if>
                    <if test="'{pageSize}'=='50'">
                        <option value="50" selected="selected">50</option>
                    </if>
                    <if test="'{pageSize}'!='50'">
                        <option value="50">50</option>
                    </if>
                    <if test="'{pageSize}'=='100'">
                        <option value="100" selected="selected">100</option>
                    </if>
                    <if test="'{pageSize}'!='100'">
                        <option value="100">100</option>
                    </if>
                </select>&nbsp;条目
            </label> &nbsp;&nbsp;<label>第&nbsp;<span>{pageNo}/{totalPage}</span>&nbsp;页
        </label> &nbsp;&nbsp;<label>共&nbsp;<span>{totalCount}</span>&nbsp;条</label>
            &nbsp;&nbsp;
            <label>跳至&nbsp;<input class="form-control" type="text">&nbsp;页
            </label>
		</div>
		<div class="pull-right">
			<ul class="pagination">
<!-- 				<li><a href="javascript:;" num="{prePage}" class="i18n" i18n="i18n.common.page.prepage">上一页</a></li> -->
				<list item="numarray" var="it">
					
					<if test="{pageNo}=={it}">
					<li class="active"><a href="javascript:;" num="{it}">{it}</a></li>
					</if>
					<if test="{pageNo}!={it}">
					<li><a href="javascript:;" num="{it}">{it}</a></li>
					</if>
				</list>
<!-- 				<li><a href="javascript:;" num="{nextPage}" class="i18n" i18n="i18n.common.page.nextpage">下一页</a></li> -->
			</ul>
		</div>
	</div>
</div>